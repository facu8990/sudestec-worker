{
	"type": "module",
	"scripts": {
		"dev": "wrangler dev --persist-to=.wrangler/ src/index.ts",
		"deploy": "wrangler types --env-interface CloudflareBindings && wrangler deploy --minify src/index.ts",
		"generate": "drizzle-kit generate:sqlite --schema=db/schema.ts",
		"up": "drizzle-kit up:sqlite --schema=src/schema.ts",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings"
	},
	"dependencies": {
		"hono": "^4.2.9"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240423.0",
		"drizzle-kit": "^0.19.13",
		"drizzle-orm": "^0.28.6",
		"typescript": "^5.4.5",
		"typescript-lit-html-plugin": "^0.9.0",
		"wrangler": "^3.53.0"
	}
}